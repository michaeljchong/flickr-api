<h1>Whose Flickr photos would you like to view?</h1>
<p>Default search is the official Flickr account</p>
<%= form_with method: "get" do %>
  <%= text_field_tag :user_id, "Flickr", placeholder: "User ID" %>
  <%= submit_tag "Search" %>
<% end %>

<% if params[:user_id].present? %>
  <h1>Showing <%=params[:user_id]%>'s photos</h1>
  <% @photos.each do |photo| %>
    <a href=<%=Flickr.url_short(photo)%>><img src=<%=Flickr.url_q(photo)%> alt=<%=photo.title%>></a>
  <% end %>
<% end %>
